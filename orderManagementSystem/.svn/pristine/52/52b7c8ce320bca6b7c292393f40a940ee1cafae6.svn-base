	    SELECT 
		ORDER_CODE,
		CASE 
		    WHEN COUNT(1) = COUNT(DECODE(ORDER_STATUS,'C',1))       THEN '已取消'
		    WHEN COUNT(1) = COUNT(DECODE(ORDER_STATUS,'S',1,'C',1)) THEN '已处理'
